<div class="level" id="task_<%= task.id %>" data-id="<%= task.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <div class="level-left">
    <div class="level-item">
      <span style="visibility: hidden;" data-target="show.item">
        <%= render partial: '_shared/rail', locals: { task: task } %>
      </span>
      <i class="fas fa-bars fa-fw has-text-grey"></i>
    </div>
    <div class="level-item">
      <% if task.task_timer %>
        <i class="green hourglass start icon"></i>
      <% end %>
      <%= link_to task.title, my_task_path(task) %>
    </div>
  </div>
  <div class="level-right">
    <% if task.project %>
      <span class="ui small grey label"><%= task.project.name %></span>
    <% end %>
    <% if task.member %>
      <span class="ui small label"><%= task.member.job_title.name %></span>
    <% end %>
    <span style="visibility: hidden;" data-target="show.item">
      <%= link_to my_task_path(task), aria: { label: t('.destroy') }, method: 'delete', remote: true do %>
        <i class="fas fa-trash fa-fw has-text-danger"></i>
      <% end %>
    </span>
  </div>
</div>
