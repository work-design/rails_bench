<% if @task.task_template %>
<tr id="task_edit_pipeline">
  <td>
    <%= @task.task_template.title %>
  </td>
  <td>
    <div class="ui mini ordered steps">
    <% @task.task_template.children.includes(:job_title, :member).each do |member| %>
      <div class="<%= member.member_id == @task.member_id ? 'active step' : 'step' %>">
        <div class="content">
          <div class="title"><%= member.job_title&.name %></div>
          <div class="description"><%= member.member&.name %></div>
        </div>
      </div>
    <% end %>
    </div>
  </td>
  <td>
    <%= link_to edit_me_task_path(@task, item: 'pipeline'), remote: true do %>
      <i class="fas fa-pencil"></i>
    <% end %>
  </td>
</tr>

<% elsif @task.tasking %>
  <div class="level is-underline">
    <%= form_with model: @task, url: me_task_path, method: :patch, wrap: { all: false, offset: false } do |f| %>
      <%= hidden_field_tag :item, 'pipeline' %>
      <div class="field-body">
        <%= f.collection_select :task_template_id, @task.tasking.task_templates, :id, :title, label: false, wrap: { all: false, input: false } %>
        <%= f.submit nil, wrap: { submit: false }, offset: false %>
      </div>
    <% end %>
  </div>
<% end %>
