<div class="card">
  <div class="card-image">
    <figure class="image is-1by1"><%= image_tag facilitate.logo if facilitate.logo.attached? %></figure>
  </div>
  <div class="card-content text-centered">
    <%= link_to facilitate.name, { action: 'show', id: facilitate.id } %>
    <p><%= facilitate.description %></p>
  </div>
  <div class="card-footer py-2">
    <%= render partial: 'cart_item', locals: { item: @cart.init_cart_item(params, good_id: facilitate.id), cart: @cart, item_con: 'trade/my/items' } %>
  </div>
</div>