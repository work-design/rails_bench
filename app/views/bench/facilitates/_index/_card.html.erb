<div class="card">
  <div class="card-image">
    <figure class="image is-1by1"><%= image_tag model.logo if model.logo.attached? %></figure>
  </div>
  <div class="card-content text-centered">
    <h2 class="title text-danger"><%= model.price.to_money.format.html_safe %></h2>
    <%= link_to model.name, { action: 'show', id: model.id } %>
    <p class="text-grey"><%= model.description %></p>
  </div>
  <div class="card-footer py-2">
    <%= render partial: 'cart_item', locals: { item: @cart.init_cart_item(params, good_id: model.id), cart: @cart, item_con: 'trade/my/items' } %>
  </div>
</div>