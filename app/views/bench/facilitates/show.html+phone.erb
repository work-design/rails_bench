<%= render 'top_bar' %>

<div class="box mx-3">
  <%= render partial: 'covers', locals: { model: @facilitate } if @facilitate.covers.length > 0 %>
</div>

<div class="box mx-3" style="z-index: 3">
  <div class="weui-panel__hd">
    <span class="color-danger"><%= @facilitate.price.to_money.format.html_safe %></span>
    <span class="color-grey pl-2">预付</span>
    <span class="color-danger-dark"><%= @facilitate.advance_price.to_money.format.html_safe %></span>
  </div>
  <div class="weui-panel__bd p-4 color-grey"><%= simple_format @facilitate.description %></div>
</div>

<% if @facilitate.facilitators.present? %>
<div class="box mx-3">
  <div class="weui-panel__hd">服务人员</div>
  <div class="weui-panel__bd">
    <%= render partial: 'facilitator', collection: @facilitate.facilitators, as: :model %>
  </div>
</div>
<% end %>
