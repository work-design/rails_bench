<% content_for :title, @facilitate.name %>
<% content_for :meta_description, @facilitate.description %>

<div>
  <div class="breadcrumb">
    <ul>
      <li><%= link_to '服务列表', facilitates_path %></li>
      <li><%= link_to @facilitate.facilitate_taxon.name, facilitates_path(facilitate_taxon_id: @facilitate.facilitate_taxon_id) %></li>
      <li class="is-active"><%= @facilitate.name %></li>
    </ul>
  </div>

  <h1 class="has-text-centered">
    <%= @facilitate.name %>
  </h1>
</div>


<div class="columns">
  <div class="column">

    <div class="tabs">
      <ul>
        <li>
          <%= link_to facilitate_path(@facilitate) do %>
            <i class="fas fa-home"></i><span>服务信息</span>
          <% end %>
        </li>
        <li>
          <%= link_to facilitate_path(@facilitate) do %>
            <i class="fas fa-info"></i><span>服务商信息</span>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="ui segment">
      <%= simple_format @facilitate.description %>
    </div>
    <%# render partial: 'store/goods/show/items', locals: { good: @good } %>
  </div>

  <div class="column is-narrow">
    <%= render partial: 'show_side', locals: { good: @good } %>
  </div>

</div>
