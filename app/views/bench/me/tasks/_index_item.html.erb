<div class="level is-underline" id="task_<%= task.id %>" data-id="<%= task.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <div class="level-left">
    <div class="level-item">
      <i class="fa-light fa-bars fa-fw has-text-grey is-drawable"></i>
    </div>
    <div class="level-item">
      <% if task.task_timer %>
        <i class="green hourglass start icon"></i>
      <% end %>
      <%= link_to task.title, { action: 'show', id: task.id } %>
      <span data-show-target="item" class="is-several pl-4" style="visibility: hidden">
        <%= render partial: 'rail', locals: { task: task } %>
      </span>
    </div>
  </div>
  <div class="level-right">
    <div class="level-item">
      <span class="tag mr-2"><%= task.focus_i18n %></span>
      <span class="tag mr-2"><%= task.state_i18n %></span>
      <time data-controller="time" class="has-text-grey"><%= task.created_at.to_fs(:iso8601) %></time>
    </div>
    <span data-show-target="item" style="visibility: hidden">
      <%= button_to({ action: 'destroy', id: task.id }, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, method: 'delete', class: 'has-text-danger') do %>
        <i class="fa-light fa-trash fa-fw"></i>
      <% end %>
    </span>
  </div>
</div>
