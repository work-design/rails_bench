<%= render 'filter_table' %>

<div data-controller="sortable" data-src="/me/tasks/">
  <% @tasks.each do |task| %>
    <%= render partial: '_index/item', locals: { task: task } %>
  <% end %>
  <div id="item_add">
    <% if 'done' != params[:state] %>
      <%= link_to new_me_task_path, remote: true do %>
        <i class="fas fa-plus"></i>
      <% end %>
    <% end %>
  </div>
</div>

<%= paginate @tasks %>
