<h2 class="title text-centered">
  <%= project.name %>
</h2>

<div class="tabs">
  <ul>
    <li class="<%= active_helper(tasks: ['project', 'show', 'content'], task_timers: 'index', active: 'is-active') %>">
      <%= link_to t('bench.me.projects.tasks.title'), { controller: 'tasks', action: 'project', project_id: project.id } %>
    </li>
    <li class="<%= active_helper(projects: ['show', 'edit'], active: 'is-active') %>">
      <%= link_to t('bench.me.projects.show.title'), { controller: 'projects', action: 'show', id: project.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'expenses', active: 'is-active') %>">
      <%= link_to t('bench.me.expenses.index.title'), { controller: 'expenses', action: 'index', project_id: project.id } %>
    </li>
  </ul>
</div>
