<%= render partial: 'project_bar', locals: { project: @project } %>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th><%= ProjectMember.human_attribute_name(:job_title_id) %></th>
      <th><%= ProjectMember.human_attribute_name(:member_id) %></th>
      <th><%= ProjectMember.human_attribute_name(:created_at) %></th>
      <th>
        <%= link_to new_me_project_member_path(@project), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
  <% @project_members.each do |project_member| %>
    <tr>
      <td><%= project_member.job_title&.name %></td>
      <td>
        <% if project_member.member_id.present? %>
          <%= link_to project_member.member.name %>
        <% else %>
          <%= link_to '邀请', member_me_project_member_path(@project, project_member), remote: true, class: 'button' %>
        <% end %>
      </td>
      <td><time><%= project_member.created_at.to_s(:rfc822) %></time></td>
      <td>
        <%= link_to '编辑', edit_me_project_member_path(@project, project_member), remote: true, class: 'button' %>
        <%= link_to '删除', me_project_member_path(@project, project_member), method: :delete, data: { confirm: t('.confirm') }, class: 'button' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @project_members %>
