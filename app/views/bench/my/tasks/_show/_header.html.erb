<h2 class="title has-text-centered">
  <%= @task.title %>
</h2>
  <% if @task.project %>
  
    <div class="ui top attached tabular menu">
    <%= link_to '任务列表', tasks_my_project_path(@task.project_id), class: active_helper(projects: 'tasks', tasks: ['show', 'content'], task_timers: 'index') %>
    <div class="right menu">
      <div class="item">
        <div class="ui transparent icon input">
          <input type="text" placeholder="Search tasks">
          <i class="search link icon"></i>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% unless @task.root? %>

<div class="ui attached segment">

  <div class="breadcrumb">
    <ul>
      <% @task.ancestors.each do |ancestor| %>
        <li><%= link_to ancestor.title, my_task_path(ancestor.id) %></li>
      <% end %>
      <li class="active"><%= @task.title %></li>
    </ul>
  </div>

</div>

<% end %>
