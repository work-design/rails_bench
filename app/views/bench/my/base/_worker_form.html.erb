<div class="ui simple dropdown item">
  <%= current_user.present_worker.duty.name if current_user.present_worker %>
  <i class="dropdown icon"></i>
  <div class="menu">
    <% current_user.workers.reject(&:new_record?).each do |worker| %>
      <%= link_to worker.duty.name, present_my_worker_path(worker.id), method: :patch, class: 'item' %>
    <% end %>
  </div>
</div>

