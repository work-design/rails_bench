<%= render partial: 'top_bar', locals: { project: @project } %>

<div class="ui basic segment">
  <%= render 'bench/my/tasks/filter' %>
</div>

<div class="divided padded row">

  <div class="eight wide column">
    <div class="ui divided items" data-controller="sortable" data-src="/my/tasks/">
      <% @tasks.each do |task| %>
        <%= render partial: 'bench/my/tasks/_index/item', locals: { task: task } %>
      <% end %>
      <div id="item_add" class="item">
        <% if 'done' != params[:state] %>
          <%= link_to new_my_task_path(project_id: @project.id), remote: true do %>
            <i class="grey plus icon"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="eight wide column">

  </div>

</div>
