<div class="ui modal" id="modal">
  <i class="close icon"></i>
  <div class="ui header blue">
    Edit Worker
  </div>

  <div class="content">
    <%= form_with model: @team_member, url: worker_my_team_member_path(@team, @team_member), method: :patch do |f| %>
      <%= f.select :worker_id, options_for_select([@team_member.worker&.name, @team_member.worker_id], @team_member.worker&.name) %>
      <%= f.submit %>
    <% end %>
  </div>

</div>