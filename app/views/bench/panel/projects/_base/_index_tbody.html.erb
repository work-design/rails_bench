<td><%= link_to model.name, { action: 'show', id: model.id } %></td>
<td><%= model.description %></td>
<td>
  <p class="color-danger"><%= link_to "#{model.fund_budget}/#{model.fund_expense}", { controller: 'bench/admin/fund_budgets', action: 'index', financial_type: 'Project', financial_id: model.id } %></p>
  <p><%= link_to "#{model.budget_amount}/#{model.expense_amount}", { controller: 'bench/admin/expenses', action: 'index', project_id: model.id } %></p>
</td>
<td>
  <% model.project_mileposts.each do |project_milepost| %>
    <p><%= project_milepost.milepost_name %>: <%= project_milepost.recorded_on %></p>
  <% end %>
</td>
<% model.extra.each do |k, v| %>
  <td><%= v %></td>
<% end %>
