$('#modal').replaceWith('<%= j(render 'new') %>');
$('#modal').modal('setting', { autofocus: false }).modal('show');

$('#pipeline_member_job_title_id').dropdown({
  onChange: function (value, text, $selectedItem) {
    var search_url = new URL(this.dataset['url']);
    search_url.searchParams.set('job_title_id', value)

    Rails.ajax({url: search_url, type: 'GET', dataType: 'script'});
  }
});
$('#pipeline_member_member_id').dropdown({
  placeholder: false
});
