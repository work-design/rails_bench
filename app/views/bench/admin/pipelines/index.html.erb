<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th class="three wide">
        <p><%= Pipeline.human_attribute_name(:name) %></p>
        <p class="ui grey text"><%= Pipeline.human_attribute_name(:description) %></p>
      </th>
      <th class="two wide"><%= Pipeline.human_attribute_name(:piping_type) %></th>
      <th class="nine wide"><%= Pipeline.human_attribute_name(:pipeline_members) %></th>
      <th class="two wide">
        <%= link_to new_admin_pipeline_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><% t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @pipelines.each do |pipeline| %>
    <tr>
      <td>
        <p><%= pipeline.name %></p>
        <p class="ui grey text"><%= pipeline.description %></p>
      </td>
      <td><%= pipeline.piping_type_i18n %></td>
      <td>
        <div class="ui mini fluid steps">
          <% pipeline.pipeline_members.each do |pipeline_member| %>
            <div class="step">
              <div class="content">
                <div class="title" style="color: <%= pipeline_member.color %>;"><%= pipeline_member.job_title.name %></div>
                <div class="description">
                  <% if pipeline_member.member %>
                    <%= image_tag pipeline_member.member.avatar, class: 'ui avatar image' %>
                    <%= pipeline_member.member.name %>
                  <% end %>
                  <%= link_to edit_admin_pipeline_member_path(pipeline, pipeline_member), data: { tooltip: t('.edit') }, remote: true do %>
                    <i class="fas fa-pencil-alt"></i>
                  <% end %>
                  <%= link_to admin_pipeline_member_path(pipeline, pipeline_member), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true do %>
                    <i class="fas fa-times"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to new_admin_pipeline_member_path(pipeline, piping_type: params[:piping_type], piping_id: params[:piping_id]), remote: true, class: 'ui mini circular icon button' do %>
            <span>成员管理</span>
          <% end %>
        </div>
        <div>
          <%= link_to admin_pipeline_path(pipeline), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
            <i class="fas fa-eye"></i>
          <% end %>
          <%= link_to edit_admin_pipeline_path(pipeline), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
          <%= link_to admin_pipeline_path(pipeline), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @pipelines %>
