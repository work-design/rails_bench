<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= Pipeline.human_attribute_name(:id) %></th>
      <th><%= Pipeline.human_attribute_name(:name) %></th>
      <th><%= Pipeline.human_attribute_name(:description) %></th>
      <th><%= Pipeline.human_attribute_name(:piping_type) %></th>
      <th><%= Pipeline.human_attribute_name(:pipeline_members) %></th>
      <th>
        <%= link_to new_admin_pipeline_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><% t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @pipelines.each do |pipeline| %>
    <tr>
      <td><%= pipeline.id %></td>
      <td><%= pipeline.name %></td>
      <td><%= pipeline.description %></td>
      <td><%= pipeline.piping_type_i18n %></td>
      <td>
        <div class="ui mini pad steps">
          <% pipeline.pipeline_members.each do |pipeline_member| %>
            <div class="step">
              <%= image_tag pipeline_member.member.user.avatar, class: 'ui avatar image' %>
              <div class="content">
                <span><%= pipeline_member.job_title.name %></span>
                <span><%= pipeline_member.member.name %></span>
              </div>
            </div>
          <% end %>
        </div>
      </td>
      <td>
        <%= link_to new_admin_pipeline_member_path(pipeline, piping_type: params[:piping_type], piping_id: params[:piping_id]), remote: true, class: 'ui mini circular icon button' do %>
          <span>成员管理</span>
        <% end %>
        <%= link_to admin_pipeline_path(pipeline), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_pipeline_path(pipeline), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_pipeline_path(pipeline), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @pipelines %>
