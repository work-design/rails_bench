<tr>
  <td><%= facilitate_taxon.name %></td>
  <td><%= facilitate_taxon.description %></td>
  <td><%= facilitate_taxon.indicators_count %></td>
  <td><%= facilitate_taxon.facilitates_count %></td>
  <td>
    <%= link_to({ action: 'show', id: facilitate_taxon.id }, aria: { label: t('.show') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-info"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: facilitate_taxon.id }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: facilitate_taxon.id }, method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
