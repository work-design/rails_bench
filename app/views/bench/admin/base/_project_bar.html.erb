<h2 class="title has-text-centered">
  <%= project.name %>
</h2>

<div class="tabs is-centered">
  <ul>
    <li class="<%= active_helper(tasks: ['project', 'show', 'content'], task_timers: 'index', active: 'is-active') %>">
      <%= link_to t('bench.admin.tasks.project.title'), { controller: 'bench/admin/tasks', action: 'project', project_id: project.id } %>
    </li>
    <li class="<%= active_helper(projects: ['show', 'edit'], active: 'is-active') %>">
      <%= link_to t('bench.admin.projects.show.title'), { controller: 'bench/admin/projects', action: 'show', id: project.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'budgets', active: 'is-active') %>">
      <%= link_to t('bench.admin.budgets.index.title'), { controller: 'bench/admin/budgets', action: 'index', project_id: project.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'expenses', active: 'is-active') %>">
      <%= link_to t('bench.admin.expenses.index.title'), { controller: 'bench/admin/expenses', action: 'index', project_id: project.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'project_indicators', active: 'is-active') %>">
      <%= link_to t('bench.admin.project_indicators.index.title'), { controller: 'bench/admin/project_indicators', action: 'index', project_id: project.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'project_facilitates', active: 'is-active') %>">
      <%= link_to t('bench.admin.project_facilitates.index.title'), { controller: 'bench/admin/project_facilitates', action: 'index', project_id: project.id } %>
    </li>
  </ul>
</div>
