<h2 class="title has-text-centered">
  <%= project.name %>
</h2>

<div class="tabs">
  <ul>
    <li class="<%= active_helper(projects: 'tasks', tasks: ['show', 'content'], task_timers: 'index', active: 'is-active') %>"><%= link_to t('bench.admin.projects.tasks.title'), { controller: 'tasks', action: 'project', project_id: project.id } %></li>
    <li class="<%= active_helper(projects: ['show', 'edit'], active: 'is-active') %>"><%= link_to t('bench.admin.projects.show.title'), { action: 'show', id: project.id } %></li>
    <li class="<%= active_helper(projects: 'task_templates', active: 'is-active') %>"><%= link_to t('bench.admin.task_templates.project.title'), { controller: 'task_templates', action: 'project', project_id: project.id } %></li>
    <li class="<%= active_helper(controllers: 'fund_budgets', active: 'is-active') %>"><%= link_to t('bench.admin.fund_budgets.index.title'), { controller: 'fund_budgets', action: 'index', financial_type: 'Project', financial_id: project.id } %></li>
