<%= render partial: 'project_bar', locals: { project: @project } %>

<section class="columns">
  <div class="column">
    <%= Project.human_attribute_name(:fund_budget) %>： <%= @project.fund_budget %>
  </div>
  <div class="column">
    <%= Project.human_attribute_name(:fund_amount) %>： <%= @project.fund_amount %>
  </div>
</section>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th><%= ProjectFund.human_attribute_name(:budget) %></th>
      <th><%= ProjectFund.human_attribute_name(:amount) %></th>
      <th><%= ProjectFund.human_attribute_name(:user_id) %></th>
      <th><%= ProjectFund.human_attribute_name(:note) %></th>
      <th><%= ProjectFund.human_attribute_name(:proof) %></th>
      <th>
        <%= link_to new_admin_project_fund_path(@project), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @project_funds.each do |project_fund| %>
      <tr>
        <td><%= project_fund.budget %></td>
        <td><%= project_fund.amount %></td>
        <td>
          <% if project_fund.visible %>
            <%= link_to project_fund.user.name, user_path(project_fund.user_id) %>
          <% else %>
            <%= project_fund.user.name %>
          <% end %>
        </td>
        <td><%= project_fund.note %></td>
        <td>
          <% if project_fund.proof_blob %>
            <p><%= link_to project_fund.proof_blob.filename, project_fund.proof_blob.service_url, target: '_blank' %></p>
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_project_fund_path(@project, project_fund), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
          <%= link_to admin_project_fund_path(@project, project_fund), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
