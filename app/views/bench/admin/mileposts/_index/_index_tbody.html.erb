<tr data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <td>
    <span><%= model.name %></span>
    <%= button_to({ action: 'move_higher', id: model.id }, method: :patch, data: { 'show-target': 'item' }, style: 'visibility: hidden') do %>
      <i class="fa-solid fa-arrow-up"></i>
    <% end %>
    <%= button_to({ action: 'move_lower', id: model.id }, method: :patch, data: { 'show-target': 'item' }, style: 'visibility: hidden') do %>
      <i class="fa-solid fa-arrow-down"></i>
    <% end %>
  </td>
  <td><%= model.project_mileposts_count %></td>
  <td>
    <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-pencil"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy') }, data: { turbo_confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </td>
</tr>
