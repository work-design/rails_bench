<tr>
  <td>
    <div class="tags has-addons">
      <span class="tag"><%= indicator.indicator_taxon.name %></span>
      <span class="tag" style="background-color: <%= indicator.indicator_taxon.color %>"></span>
    </div>
  </td>
  <td><%= indicator.name %></td>
  <td><%= indicator.description %></td>
  <td>
    <p><%= indicator.reference_min %></p>
    <p><%= indicator.reference_max %></p>
  </td>
  <td><%= indicator.unit %></td>
  <td>
    <%= link_to({ action: 'show', id: indicator.id }, { aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: indicator.id }, { aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: indicator.id }, { method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
