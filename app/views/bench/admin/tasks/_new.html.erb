<%= form_with theme: nil, model: @task, url: { action: 'create' }, data: { controller: 'input' }, class: 'field is-horizontal pt-2' do |f| %>
  <div class="field-body">
    <%= f.hidden_field :parent_id %>
    <%= f.hidden_field :tasking_type %>
    <%= f.hidden_field :tasking_id %>
    <div class="field">
      <%= f.text_field :title, placeholder: true, class: 'input' %>
    </div>
    <div class="field is-narrow">
      <%= f.submit '保存', class: 'button is-primary' %>
      <button class="button is-light" data-controller="common" data-action="common#cancel">取消</button>
    </div>
  </div>
<% end %>
