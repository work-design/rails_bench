<%= link_to({ action: 'edit', id: task.id, item: 'title' }, aria: { label: t('.edit') }) do %>
  <i class="fas fa-pencil-alt fa-fw has-text-info"></i>
<% end %>

<%= link_to({ controller: 'task_timers', action: 'pause', task_id: task.id, id: task.task_timer.id }, method: 'patch', id: "pause_task_#{task.id}") do %>
  <i class="fas fa-pause fa-fw has-text-grey"></i>
<% end if task.task_timer %>

<%= link_to({ action: 'edit_done', id: task.id }, aria: { label: t('.done') }, id: "play_task_#{task.id}") do %>
  <i class="far fa-square fa-fw has-text-link"></i>
<% end unless task.done? %>

<%= link_to({ action: 'edit_focus', id: task.id }, aria: { label: t('.today') }, id: "play_task_#{task.id}") do %>
  <i class="fas fa-star fa-fw has-text-link"></i>
<% end if task.inbox? %>

<%= link_to({ controller: 'task_timers', task_id: task.id }, method: 'post', id: "play_task_#{task.id}") do %>
  <i class="fas fa-play fa-fw has-text-primary"></i>
<% end if task.today? %>

<%= link_to({ action: 'new', parent_id: task.id }) do %>
  <i class="fas fa-plus"></i>
<% end %>
