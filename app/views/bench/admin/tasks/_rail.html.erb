<%= link_to({ controller: 'tasks', action: 'edit', id: task.id, item: 'title' }, aria: { label: t('.edit') }, data: { controller: 'common', action: 'common#link' }) do %>
  <i class="fa-light fa-pencil fa-fw has-text-info"></i>
<% end %>

<%= link_to({ controller: 'task_timers', action: 'pause', task_id: task.id, id: task.task_timer.id }, method: 'patch', id: "pause_task_#{task.id}") do %>
  <i class="fa-light fa-pause fa-fw has-text-grey"></i>
<% end if task.task_timer %>


<%= link_to({ controller: 'task_timers', task_id: task.id }, method: 'post', id: "play_task_#{task.id}") do %>
  <i class="fa-solid fa-play fa-fw has-text-primary"></i>
<% end if task.today? %>

