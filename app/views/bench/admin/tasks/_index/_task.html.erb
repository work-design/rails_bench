<turbo-frame class="level is-underline" id="task_<%= task.id %>" data-id="<%= task.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <div class="level-left">
    <div class="level-item">
      <i class="fa-solid fa-fw fa-bars has-text-grey is-drawable"></i>
    </div>
    <div class="level-item">
      <% if task.task_timer %>
        <i class="green hourglass start icon"></i>
      <% end %>
      <%= link_to task.title, { action: 'show', id: task.id } %>
      <span data-show-target="item" class="is-several visibility-hidden">
        <%= render partial: 'rail', locals: { task: task } %>
      </span>
    </div>
    <div class="level-item">
      <% if task.project %>
        <span class="tag is-link"><%= task.project.name %></span>
      <% end %>
    </div>
  </div>
  <div class="level-right">
    <% if task.member %>
      <span class="tag"><%= task.job_title&.name %></span>
    <% end %>
    <span data-show-target="item" class="visibility-hidden">
      <%= button_to({ action: 'destroy', id: task.id }, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.confirm') }, method: 'delete', class: 'has-text-danger') do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </span>
  </div>
</turbo-frame>
