<%= render 'filter_table' %>

<div data-controller="sortable" data-src="/admin/tasks/">
  <%= render partial: 'index_item', collection: @tasks, as: :task %>
  <div id="item_add">
    <% if 'done' != params[:state] %>
      <%= link_to({ action: 'new' }, remote: true) do %>
        <i class="fas fa-plus"></i>
      <% end %>
    <% end %>
  </div>
</div>

<%= paginate @tasks %>
