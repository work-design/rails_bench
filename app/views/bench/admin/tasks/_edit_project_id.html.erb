<tr id="task_edit_project_id">
  <td>
    所属项目：
    <%= form_tag project_id_me_task_url(@task), method: :patch, remote: true, id: 'edit_project_id' %>
    <%= hidden_field_tag :item, 'project_id', form: 'edit_project_id' %>
  </td>
  <td>
    <%= select_tag 'task[project_id]', options_from_collection_for_select(current_user.projects, :id, :name, @task.project_id), include_blank: true, form: 'edit_project_id' %>
  </td>
  <td>
    <%= submit_tag 'save', class: 'ui mini button', form: 'edit_project_id' %>
    <button class="button is-light" data-controller="common" data-action="common#cancel">取消</button>
  </td>
</tr>


