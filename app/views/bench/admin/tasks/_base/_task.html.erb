<div class="<%= task.done? ? 'level is-underline has-background-white-ter' : 'level is-underline' %>" id="task_<%= task.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <div class="level-left">
    <div class="level-item">
      <i class="fa-solid fa-fw fa-bars color-grey is-drawable"></i>
    </div>
    <%= render partial: 'title_item', locals: { task: task } %>
  </div>
  <div class="level-right">
    <% task.blank_items.each do |k, _| %>
      <%= render partial: "item_#{k}", locals: { task: task } %>
    <% end %>
    <% task.present_items.each do |k, _| %>
      <%= render partial: "item_#{k}", locals: { task: task } %>
    <% end %>
    <div class="level-item">
      <time data-controller="time" class="color-grey"><%= task.created_at.to_fs(:iso8601) %></time>
    </div>
    <div class="level-item" data-show-target="item" class="visibility-hidden">
      <%= button_to({ controller: 'tasks', action: 'destroy', id: task.id }, method: :delete, aria: { label: t('.destroy.title') }, form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
        <i class="fa-solid fa-fw fa-trash color-danger"></i>
      <% end %>
    </div>
  </div>
</div>
