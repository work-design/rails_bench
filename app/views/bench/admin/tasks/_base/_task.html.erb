<div class="<%= task.done? ? 'level is-underline has-background-white-ter' : 'level is-underline' %>" id="task_<%= task.id %>" data-id="<%= task.id %>" data-url="<%= url_for(controller: 'tasks', action: 'reorder', id: task.id) %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <div class="level-left">
    <span style="width: <%= task.depth * 1.43 %>em; display: inline-block"></span>
    <div class="level-item">
      <% if @task&.id == task.id %>
        <i class="fa-light fa-check-square fa-fw has-text-success is-drawable"></i>
      <% else %>
        <i class="fa-light fa-bars fa-fw has-text-grey is-drawable"></i>
      <% end %>
      <%= link_to({ controller: controller_path, action: action_name, task_id: task.id }) do %>
        <span><%= task.title %></span>
        <% if task.children.size > 0 %>
        <span class="tag is-light"><%= task.children.size %></span>
        <% end %>
      <% end %>
    </div>
    <div class="level-item" data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'tasks', action: 'edit', id: task.id }, data: { controller: 'common', action: 'common#link' }, aria: { label: t('.edit') }) do %>
        <i class="fa-solid fa-fw fa-pencil has-text-grey"></i>
      <% end %>
    </div>
    <div class="level-item" data-show-target="item" style="visibility: hidden">
      <%= button_to({ controller: 'tasks', action: 'child', id: task.id }, method: :patch, aria: { label: '子任务' }) do %>
        <i class="fa-solid fa-fw fa-diagram-subtask has-text-grey"></i>
      <% end %>
    </div>
  </div>
  <div class="level-right">
    <% blank_items = [] %>
    <% ['estimated_time', 'cost_fund', 'cost_stock', 'deadline_on', 'member', 'focus', 'state'].each do |item| %>
      <% if task.public_send(item).blank? %>
      <div class="level-item">
        <%= render partial: "#{item}_add", locals: { task: task } %>
      </div>
      <% else %>
        <% blank_items << item %>
      <% end %>
    <% end %>
    <div class="level-item" data-show-target="item" style="visibility: hidden">
      <%= button_to({ controller: 'tasks', action: 'destroy', id: task.id }, method: :delete, aria: { label: t('.destroy') }, form: { data: { turbo_confirm: t('.confirm') } }) do %>
        <i class="fa-solid fa-trash fa-fw has-text-danger"></i>
      <% end %>
    </div>
    <% blank_items.each do |item| %>
      <div class="level-item">
        <%= render partial: "#{item}_item", locals: { task: task } %>
      </div>
    <% end %>
    <div class="level-item">
      <time data-controller="time" class="has-text-grey"><%= task.created_at.to_fs(:iso8601) %></time>
    </div>
  </div>
</div>

<%= render partial: 'task', collection: task.children, as: :task if task.root? %>
