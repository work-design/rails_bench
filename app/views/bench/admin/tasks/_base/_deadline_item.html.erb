<% if task.deadline_on.blank? %>
  <%= link_to({ controller: 'tasks', action: 'deadline', id: task.id }, data: { turbo_frame: 'modal', show_target: 'item' }, aria: { label: '截止日期' }, style: 'visibility: hidden') do %>
    <i class="fa-solid fa-timeline-arrow has-text-danger"></i>
  <% end %>
<% else %>
  <div class="tags has-addons">
    <%= link_to({ controller: 'tasks', action: 'deadline', id: task.id }, data: { turbo_frame: 'modal' }, aria: { label: '截止日期' }, class: 'tag') do %>
      <i class="fa-solid fa-timeline-arrow has-text-danger"></i>
    <% end %>
    <span class="tag is-light is-danger"><%= task.deadline_on %></span>
  </div>
<% end %>
