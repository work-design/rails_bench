<div class="<%= task.done? ? 'level is-underline has-background-white-ter' : 'level is-underline' %>" id="task_<%= task.id %>" data-id="<%= task.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <div class="level-left">
    <span style="width: <%= task.depth * 1.43 %>em; display: inline-block"></span>
    <div class="level-item">
      <% if @task&.id == task.id %>
        <i class="fa-light fa-check-square fa-fw has-text-success is-drawable"></i>
      <% else %>
        <i class="fa-light fa-bars fa-fw has-text-grey is-drawable"></i>
      <% end %>
      <%= link_to task.title, { controller: controller_path, action: action_name, task_id: task.id } %>
    </div>
    <div class="level-item" data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'tasks', action: 'edit', id: task.id }, data: { controller: 'common', action: 'common#link' }, aria: { label: t('.edit') }) do %>
        <i class="fa-solid fa-pencil has-text-grey"></i>
      <% end %>
    </div>
    <div class="level-item" data-show-target="item" style="visibility: hidden">
      <%= button_to({ controller: 'tasks', action: 'child', id: task.id }, method: :patch, aria: { label: '子任务' }) do %>
        <i class="fa-solid fa-diagram-nested fa-fw"></i>
      <% end %>
    </div>
  </div>
  <div class="level-right">
    <div class="level-item">
      <%= render partial: 'fund_item', locals: { task: task } %>
    </div>
    <div class="level-item">
      <%= render partial: 'stock_item', locals: { task: task } %>
    </div>
    <div class="level-item">
      <%= render partial: 'focus_item', locals: { task: task } %>
    </div>
    <div class="level-item">
      <%= render partial: 'state_item', locals: { task: task } %>
    </div>
    <div class="level-item">
      <%= render partial: 'member_item', locals: { task: task } %>
    </div>
    <div class="level-item">
      <%= render partial: 'estimated_item', locals: { task: task } %>
    </div>
    <div class="level-item">
      <%= render partial: 'deadline_item', locals: { task: task } %>
    </div>
    <div class="level-item">
      <%= link_to({ controller: 'tasks', action: 'show', id: task.id }, aria: { label: t('.destroy') }, data: { 'show-target': 'item', confirm: t('.confirm') }, method: :delete, style: 'visibility: hidden') do %>
        <i class="fa-solid fa-trash fa-fw has-text-danger"></i>
      <% end %>
    </div>
    <div class="level-item">
      <time data-controller="time" class="has-text-grey"><%= task.created_at.to_fs(:iso8601) %></time>
    </div>
  </div>
</div>

<%= render partial: 'task', collection: task.children, as: :task if task.root? %>
