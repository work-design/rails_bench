<%= render partial: "#{params[:financial_type].underscore}_bar", locals: { :"#{params[:financial_type].underscore}" => @financial } %>

<section class="columns">
  <div class="column">
    <%= Project.human_attribute_name(:fund_budget) %>： <%= @financial.fund_budget %>
  </div>
  <div class="column">
    <%= Project.human_attribute_name(:fund_expense) %>： <%= @financial.fund_expense %>
  </div>
</section>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th><%= FundBudget.human_attribute_name(:fund_id) %></th>
      <th><%# FundBudget.human_attribute_name(:budget_amount) %></th>
      <th><%= FundBudget.human_attribute_name(:amount) %></th>
      <th><%= FundBudget.human_attribute_name(:note) %></th>
      <th>
        <%= link_to({ action: 'new', financial_type: params[:financial_type], financial_id: params[:financial_id] }, { remote: true, class: 'button is-small is-link' }) do %>
          <i class="fas fa-plus"></i><span><%= t('.new') %></span>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @fund_budgets.each do |fund_budget| %>
      <tr>
        <td><%= fund_budget.fund.name %></td>
        <td><%# fund_budget.budget_amount %></td>
        <td><%= link_to fund_budget.amount, { controller: 'bench/admin/expenses', action: 'index', project_id: params[:financial_id], fund_budget_id: fund_budget.id } %></td>
        <td><%= fund_budget.note %></td>
        <td>
          <%= link_to({ action: 'edit', financial_type: params[:financial_type], financial_id: params[:financial_id], id: fund_budget.id }, { aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
          <%= link_to({ action: 'destroy', financial_type: params[:financial_type], financial_id: params[:financial_id], id: fund_budget.id }, { method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
