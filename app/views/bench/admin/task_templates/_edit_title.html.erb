<%= form_with theme: nil, model: [:admin, @task_template], data: { controller: 'input' }, class: 'field is-horizontal' do |f| %>
  <div class="field-body">
    <%= f.hidden_field :tasking_type %>
    <%= f.hidden_field :tasking_id %>
    <%= f.hidden_field :parent_id %>
    <div class="field">
      <%= f.text_field :title, required: 'required', class: 'input' %>
    </div>
    <div class="field is-narrow">
      <%= f.submit '确定', class: 'button is-primary' %>
      <%= link_to '取消', add_admin_task_templates_path(task_template_id: @task_template.id), remote: true, class: 'button is-light' %>
    </div>
  </div>
<% end %>
