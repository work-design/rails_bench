<tr>
  <td><%= budget.subject %></td>
  <td><%= budget.amount %></td>
  <td><%= budget.note %></td>
  <td><%= budget.financial_taxon.name %></td>
  <td>
    <%= link_to({ action: 'show', project_id: @project.id, id: budget.id }, aria: { label: t('.show') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-info"></i>
    <% end %>
    <%= link_to({ action: 'edit', project_id: @project.id, id: budget.id }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', project_id: @project.id, id: budget.id }, method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
