<%= form_with theme: 'search', model: Budget.new do |f| %>
  <div class="field-body">
    <%= f.text_field 'subject-like' %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: ['subject-like']), class: 'button is-light' %>
    </div>
  </div>
<% end %>
