<tr>
  <td>
    <%= image_tag facilitate.logo, size: 'image is-32' if facilitate.logo.attached? %>
    <%= facilitate.name %>
  </td>
  <td><%= facilitate.description %></td>
  <td><time><%= facilitate.created_at.to_s(:rfc822) %></time></td>
  <td><%# facilitate.price %></td>
  <td></td>
  <td>
    <%= link_to({ controller: 'facilitate_indicators', action: 'index', facilitate_id: facilitate.id }, { class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-smile-beam"></i><span><%= t('bench.admin.facilitate_indicators.index.title') %></span>
    <% end %>
    <%= link_to({ controller: 'facilitate_providers', action: 'index', facilitate_id: facilitate.id }, { class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-search"></i><span><%= t('bench.admin.facilitate_providers.index.title') %></span>
    <% end %>
    <%= link_to({ action: 'show', id: facilitate.id }, { aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: facilitate.id }, { aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: facilitate.id }, { method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
