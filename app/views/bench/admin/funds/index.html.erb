<%= render partial: 'project_bar', locals: { project: @project } %>

<section class="columns">
  <div class="column">
    <%= Project.human_attribute_name(:fund_budget) %>： <%= @project.fund_budget %>
  </div>
  <div class="column">
    <%= Project.human_attribute_name(:fund_amount) %>： <%= @project.fund_amount %>
  </div>
</section>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th><%= ProjectFund.human_attribute_name(:budget) %></th>
      <th><%= ProjectFund.human_attribute_name(:amount) %></th>
      <th><%= ProjectFund.human_attribute_name(:user_id) %></th>
      <th><%= ProjectFund.human_attribute_name(:note) %></th>
      <th><%= ProjectFund.human_attribute_name(:proof) %></th>
      <th>
        <%= link_to({ action: 'new', project_id: @project.id }, { remote: true, class: 'button is-small is-link' }) do %>
          <i class="fas fa-plus"></i><span><%= t('.new') %></span>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @funds.each do |fund| %>
      <tr>
        <td><%= fund.budget %></td>
        <td><%= fund.amount %></td>
        <td>
          <% if fund.visible %>
            <%= link_to fund.user.name, user_path(fund.user_id) %>
          <% else %>
            <%= fund.user.name %>
          <% end %>
        </td>
        <td><%= fund.note %></td>
        <td>
          <% if fund.proof_blob %>
            <p><%= link_to fund.proof_blob.filename, fund.proof_blob.service_url, target: '_blank' %></p>
          <% end %>
        </td>
        <td>
          <%= link_to({ action: 'edit', project_id: @project.id, id: fund.id }, { aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
          <%= link_to({ action: 'destroy', project_id: @project.id, id: fund.id }, { method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
