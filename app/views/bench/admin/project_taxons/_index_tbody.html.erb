<tr>
  <td><%= link_to project_taxon.name, { action: 'show', id: project_taxon.id }, text: true %></td>
  <td><%= simple_format project_taxon.parameters %></td>
  <td>
    <%= link_to({ controller: 'projects', project_taxon_id: project_taxon.id }, text: true, aria: { label: t('bench.admin.projects.index.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-list-ul"></i><span><%= project_taxon.projects_count %></span>
    <% end %>
  </td>
  <td>
    <%= link_to({ action: 'parameter', id: project_taxon.id }, aria: { label: t('.parameter') }, remote: true, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-sitemap"></i>
    <% end %>
    <%= link_to({ action: 'show', id: project_taxon.id }, aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-info"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: project_taxon.id }, aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: project_taxon.id }, method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
