<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= ProjectTaxon.human_attribute_name(:name) %></th>
      <th>
        <%= link_to new_admin_project_taxon_path, remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @project_taxons.each do |project_taxon| %>
    <tr>
      <td><%= project_taxon.name %></td>
      <td>
        <%= link_to admin_project_taxon_path(project_taxon), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to admin_task_templates_path(tasking_type: 'ProjectTaxon', tasking_id: project_taxon.id), aria: { label: t('bench.admin.task_templates.index.title') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-tasks"></i>
        <% end %>
        <%= link_to edit_admin_project_taxon_path(project_taxon), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_project_taxon_path(project_taxon), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @project_taxons %>
