<div class="ui top attached borderless menu">
  <div class="item header">职位列表</div>
  <div class="right menu">
    <div class="item"><%= link_to '新建', new_admin_duty_path, class: 'ui teal button' %></div>
  </div>
</div>

<div class="ui attached segment">
</div>

<table class="ui bottom attached table">
  <thead>
  <tr>
    <th>ID</th>
    <th>名称</th>
    <th>描述</th>
    <th>时间</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @duties.each do |duty| %>
    <tr>
      <td><%= duty.id %></td>
      <td><%= duty.name %></td>
      <td><%= duty.description %></td>
      <td><%= duty.created_at.to_s(:db2) %></td>
      <td>
        <%= link_to '详细', admin_duty_path(duty), class: 'ui blue label' %>
        <%= link_to '编辑', edit_admin_duty_path(duty), class: 'ui pink label' %>
        <%= link_to '删除', admin_duty_path(duty), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui red label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @duties %>