<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>
        <%= link_to t('.edit'), { action: 'edit', id: @project.id }, { remote: true, class: 'button is-small is-link' } %>
        <%= link_to admin_map_path(target_id: @project.id, target_type: @project.class), class: 'button is-small is-link', target: :_balnk do%>
          Map
        <% end if defined? LngLat%>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="has-text-right"><%= Project.human_attribute_name(:creator_id) %></td>
      <td>
        <% @project.owners.each do |owner| %>
          <p><%= owner.name %></p>
        <% end %>
      </td>
    </tr>
    <% @project.extra.each do |k, v| %>
    <tr>
      <td class="has-text-right"><%= k.to_s %></td>
      <td><%= v %></td>
    </tr>
    <% end %>
  </tbody>
</table>
