<tr>
  <td><%= project.project_taxon&.name %></td>
  <td><%= link_to project.name, { action: 'show', id: project.id } %></td>
  <td><%= project.description %></td>
  <td>
    <p class="has-text-danger"><%= link_to "#{project.fund_budget}/#{project.fund_expense}", { controller: 'bench/admin/fund_budgets', action: 'index', financial_type: 'Project', financial_id: project.id } %></p>
    <p><%= link_to "#{project.budget_amount}/#{project.expense_amount}", { controller: 'bench/admin/expenses', action: 'index', project_id: project.id } %></p>
  </td>
  <td>
    <% project.owners.each do |owner| %>
      <p><%= owner.name %></p>
    <% end %>
  </td>
  <td>
    <% project.project_mileposts.each do |project_milepost| %>
      <p><%= project_milepost.milepost_name %>: <%= project_milepost.recorded_on %></p>
    <% end %>
    <%= link_to({ controller: 'project_mileposts', action: 'new', project_id: project.id }, { remote: true, class: 'button is-small is-rounded' }) do %>
      <i class="fas fa-step-forward"></i><span><%= '下一步' %></span>
    <% end %>
  </td>
  <td>
    <%= link_to admin_project_path(project), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_admin_project_path(project), remote: true, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to admin_project_path(project), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
